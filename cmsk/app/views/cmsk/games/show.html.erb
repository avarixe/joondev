<style>
  .table-container { overflow-x: scroll; }
  #records-table { min-width: 450px; }
</style>

<div class="col-sm-12 text-right">
  <%= link_to 'Edit', edit_game_path(@game), class: 'btn btn-warning' %>
  <%= link_to 'Save Stats', game_path(@game, format: :xlsx), class: 'btn btn-info' %>
  <%= link_to 'Back', games_path, class: 'btn btn-default' %>
</div>

<div class="col-sm-12 text-center" >
  <h1><%= @game.competition %></h1>
  <h2><%= @team.team_name %> v <%= @game.opponent %></h2>
  <h2><%= @game.score %></h2>
  <h4>Date Played: <%= time_to_string(@game.date_played, "%B %e, %Y") %></h4>
</div>

<div class="col-xs-12 mt10">
  <div class="panel panel-<%= @game.result %>">
    <div class="panel-body">
      <table id="records-table" class="table table-sm table-hover">
        <thead class="thead-inverse">
          <tr>
            <th style="width:15%"></th>
            <th style="width:40%">Name</th>
            <th style="width:15%">Rating</th>
            <th style="width:15%">Goals</th>
            <th style="width:15%">Assists</th>
          </tr>
        </thead>
        <tbody>
        <% @records.each do |record| %>
          <tr class="<%= 'warning' if record.player_id == @game.motm_id %>">
            <td><%= record.pos %></td>
            <td><%= record.player_name %></td>
            <td><%= record.rating %></td>
            <td><%= record.goals %></td>
            <td><%= record.assists %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>