<div class="col-sm-12 text-right mb10">
  <%= link_to 'New Season', new_season_path, class: 'button button-raised button-highlight' %>
</div>

<div class="table-container">
  <table class="table table-hover table-striped" data-link="/cmsk/seasons/">
    <thead class="thead-inverse">
      <th>Season</th>
      <th>League</th>
    </thead>
    <tbody>
      <% @seasons.each do |season| %>
        <tr data-id=<%= season.id %>>
          <td><%= season.title %></td>
          <td><%= season.league %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $(function(){
    $('table').DataTable();
  })
</script>
