<div class="panel panel-default collapse <%= 'in' if f.object.id.present? %>" data-id=<%= f.object.id %>>
  <%= f.hidden_field :team_id, value: @team.id %>
  <div class="panel-heading container-fluid">
    <div class="panel-title">
      <div class="col-sm-right-2">
        <a class="rem-btn button button-small button-raised button-caution pull-right">
          <%= fa_icon 'times' %>
        </a>
        <%= f.hidden_field :_destroy %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :title, class: 'form-control', placeholder: 'Stage' %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="form-group row">
      <%= f.label :category, 'Type: ', class: 'col-sm-3 control-label' %>
      <div class="col-sm-3">
        <%= f.select :category, options_for_select(Cmsk::Stage::CATEGORIES, f.object.category), {}, {class: 'form-control', disabled: f.object.complete?} %>
      </div>
      <%= f.label :num_plays, 'Games Played per Fixture: ', class: 'col-sm-3 control-label' %>
      <div class="col-sm-3">
        <%= f.select :num_plays, options_for_select([1,2], f.object.num_plays), {}, {class: 'form-control', disabled: f.object.complete?} %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :opponents, 'Teams: ', class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.text_area :opponents, value: (f.object.opponents.join("\n") rescue ''), rows: 2, placeholder: "One Opponent Team per line", class: 'form-control', disabled: f.object.complete? %>
      </div>
    </div>

  </div>
</div>