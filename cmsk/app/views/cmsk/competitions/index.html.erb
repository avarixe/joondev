<div class="col-sm-12 text-right mb10">
  <%= link_to 'New Competition', new_competition_path, class: 'button button-raised button-highlight' %>
</div>

<div class="table-container">
  <table class="table table-hover table-striped" data-link="/cmsk/competitions/">
    <thead class="thead-inverse">
      <th>Season</th>
      <th>Competition</th>
    </thead>
    <tbody>
      <% @competitions.each do |competition| %>
        <tr data-id=<%= competition.id %>>
          <td><%= competition.season %></td>
          <td><%= competition.title %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $(function(){
    $('table').DataTable();
  })
</script>
