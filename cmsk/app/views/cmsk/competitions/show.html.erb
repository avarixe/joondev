<style>
  textarea {
    resize: vertical;
  }
  table th, tr, td {
    vertical-align: middle !important;
    text-align: center;
  }
</style>

<div class="col-sm-12 text-right">
  <%= link_to 'Edit', edit_competition_path(@competition), class: 'btn btn-warning' %>
  <%= link_to 'Back', competitions_path, class: 'btn btn-default' %>
</div>

<div class="form-group row">
  <%= label_tag :title, 'Competition: ', class: 'col-sm-4 col-sm-offset-2 control-label' %>
  <div class="col-sm-4">
    <%= text_field_tag :title, @competition.title, class: 'form-control', readonly: true %>
  </div>
</div>

<div class="form-group row">
  <%= label_tag :season, 'Season: ', class: 'col-sm-4 col-sm-offset-2 control-label' %>
  <div class="col-sm-4">
    <%= text_field_tag :season, @competition.season, class: 'form-control', readonly: true %>
  </div>
</div>

<div id="stages" class="panel-group">
  <% @competition.stages.each do |stage| %>
    <%= render 'stage', stage: stage %>
  <% end %>
</div>