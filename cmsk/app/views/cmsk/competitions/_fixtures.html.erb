<table id="stage_<%= stage.id %>" class="table table-hover">
  <thead>
    <th class="col-xs-2">Home</th>
    <th class="col-xs-1">GH</th>
    <th class="col-xs-1"> - </th>
    <th class="col-xs-1">GA</th>
    <th class="col-xs-2">Away</th>
    <th class="col-xs-3">Date Played</th>
    <th class="col-xs-2"><!-- Actions --></th>
  </thead>
  <tbody>
    <% stage.fixtures.each do |fixture| %>
      <tr data-id=<%= fixture.id %>>
        <td><%= fixture.home %></td>
        <td><%= number_field_tag :goals_home, fixture.goals_home, class: 'form-control' %></td>
        <td> - </td>
        <td><%= number_field_tag :goals_away, fixture.goals_away, class: 'form-control' %></td>
        <td><%= fixture.away %></td>
        <td><%= text_field_tag :date_played, fixture.date_played, class: 'form-control flatpickr' %></td>
        <td>
          <% if [fixture.home, fixture.away].include?(@team.team_name) %>
            <!-- Link to new Game or existing Game -->
          <% else %>
            <a class="update-btn btn btn-block btn-warning">Update</a>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>