<div class="col-xs-12 text-right mb10">
  <%= link_to 'New Team', new_team_path, class: 'button button-raised button-highlight' %>
</div>

<i>Note: The current active Team is highlighted. To switch, click and view the Team of your choice.</i>

<table class="table table-hover table-striped" data-link="/cmsk/teams/">
  <thead class="thead-inverse">
    <th>Name</th>
    <th>Competitions</th>
  </thead>

  <tbody>
    <% current_user.teams.each do |team| %>
      <tr data-id=<%= team.id %> class="<%= 'success' if session[:team].to_i == team.id %>">
        <td><%= team.team_name %></td>
        <td><%= team.competitions.map(&:title).join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
