<script>
  $(function(){
    $('table tr').click(function(){
      window.location = '/cmsk/teams/'+$(this).data('team-id');
    })
  })
</script>

<div class="col-sm-12 text-sm-right mb10">
  <%= link_to 'New Team', new_team_path, class: 'btn btn-warning' %>
</div>

<i>Note: The current active Team is highlighted. To switch, click and view the Team of your choice.</i>

<table class="table table-hover table-bordered table-striped">
  <thead>
    <tr class="thead-inverse">
      <th>Name</th>
      <th>Competitions</th>
    </tr>
  </thead>

  <tbody>
    <% current_user.teams.each do |team| %>
      <tr data-team-id=<%= team.id %> class="<%= 'table-success' if cookies[:team].to_i == team.id %>">
        <td><%= team.team_name %></td>
        <td><%= team.competitions %></td>
      </tr>
    <% end %>
  </tbody>
</table>
