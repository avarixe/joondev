<script>
  function checkForm(){
    if (!$('#team_team_name').val())
      return error_alert('Please enter a Team Name.')  
    else if (!$('#team_competitions').val())
      return error_alert('Please enter Competitions.')
    else
      return true;
  }
</script>

<%= form_for(@team) do |f| %>
  <div class="form-group row">
    <%= f.label :team_name, 'Name: ', class: 'col-sm-4 col-form-label' %>
    <div class="col-sm-8">
      <%= f.text_field :team_name, class: 'form-control', required: true %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :competitions, 'Competitions: ', class: 'col-sm-4 col-form-label' %>
    <div class="col-sm-8">
      <%= f.text_area :competitions, class: 'form-control', placeholder: 'Enter competitions, separated by commas (e.g. "Barclays Premier League, EFL Cup, ..."', required: true %>
    </div>
  </div>

  <div class="text-xs-center">
    <%= f.submit 'Save Team', class: 'btn btn-warning', onclick: 'return checkForm()' %>
  </div>
<% end %>
