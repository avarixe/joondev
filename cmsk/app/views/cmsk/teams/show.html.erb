<div class="col-sm-12 text-sm-right">
  <%= link_to 'Edit', edit_team_path(@team), class: 'btn btn-warning' %>
  <%= link_to 'Back', teams_path, class: 'btn btn-secondary' %>
</div>

<div class="col-sm-12 mt10">
  <div class="card card-block text-xs-center">
    <div class="card-title"><h4>Competitions</h4></div>
    <%= @team.competitions.split(',').map{ |c| "<u><b>#{c}</b></u>" }.join(', ').html_safe %>
  </div>
</div>
