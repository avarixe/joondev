<script>
  $(function(){
    $('table').on('click', 'tr', function(){
      if ($(this).data('id'))
        window.location = "/cmsk/squads/"+$(this).data('id');
    });
  });
</script>

<table class="table table-hover table-bordered table-striped">
  <thead class="thead-inverse">
    <tr>
      <th width="20%">Name</th>
      <th width="80%">Players</th>
    </tr>
  </thead>

  <tbody>
    <% @squads.each do |squad| %>
      <tr data-id=<%= squad.id %>>
        <td><%= squad.squad_name %></td>
        <td><%= squad.player_names %></td>
      </tr>
    <% end %>
  </tbody>
</table>
