<script>
  $(function(){
    $('table').on('click', 'tr', function(){
      if ($(this).data('id'))
        window.location = "/cmsk/squads/"+$(this).data('id');
    });
  });
</script>

<div class="col-sm-12 text-sm-right mb10">
  <%= link_to 'New Squad', new_squad_path, class: 'btn btn-warning' %>
</div>

<table class="table table-hover table-bordered table-striped">
  <thead class="thead-inverse">
    <tr>
      <th width="20%">Name</th>
      <th width="80%">Players</th>
    </tr>
  </thead>

  <tbody>
    <% @squads.each do |squad| %>
      <tr data-id=<%= squad.id %>>
        <td><%= squad.squad_name %></td>
        <td><%= squad.player_names %></td>
      </tr>
    <% end %>
  </tbody>
</table>
