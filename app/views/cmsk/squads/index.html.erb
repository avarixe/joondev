<div class="col-sm-12 text-right mb10">
  <%= link_to 'New Squad', new_squad_path, class: 'button button-raised button-highlight' %>
</div>

<table class="table table-hover table-striped" data-link="/cmsk/squads/">
  <thead class="thead-inverse">
    <th width="20%">Name</th>
    <th width="80%">Players</th>
  </thead>

  <tbody>
    <% @squads.each do |squad| %>
      <tr data-id=<%= squad.id %>>
        <td><%= squad.squad_name %></td>
        <td><%= squad.player_names %></td>
      </tr>
    <% end %>
  </tbody>
</table>
