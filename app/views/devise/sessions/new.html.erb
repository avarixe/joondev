<div class="page-header"><h2>Welcome to JoonDEV</h2></div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row">
    <%= f.label :login, 'Username: ', class: 'col-form-label col-md-5 col-lg-2 offset-lg-3' %>
    <div class="col-md-7 col-lg-4">
      <%= f.text_field :login, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, 'Password: ', class: 'col-form-label col-md-5 col-lg-2 offset-lg-3' %>
    <div class="col-md-7 col-lg-4">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>

  <div class="text-sm-center">
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  
    <div class="actions">
      <%= f.submit "Log In", class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
