<div class="page-header"><h2>Sign Up</h2></div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="col-md-6 mt10">
    <div class="form-group row">
      <%= f.label :full_name, 'Name: ', class: 'control-label col-sm-5' %>
      <div class="col-sm-7">
        <%= f.text_field :full_name, class: 'form-control', autofocus: true, required: true %>
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.label :username, 'Username: ', class: 'control-label col-sm-5' %>
      <div class="col-sm-7">
        <%= f.text_field :username, class: 'form-control', required: true %>
      </div>
    </div> 
    
    <div class="form-group row">
      <%= f.label :email, 'Email Address: ', class: 'control-label col-sm-5' %>
      <div class="col-sm-7">
        <%= f.email_field :email, class: 'form-control', required: true %>
      </div>
    </div>    
  </div>
  <div class="col-md-6 mt10">
    <div class="form-group row">
      <%= f.label :password, 'Password: ', class: 'control-label col-sm-5' %>
      <div class="col-sm-7">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "#{ @minimum_password_length} characters minimum" %>
      </div>
    </div>
      
    <div class="form-group row">
      <%= f.label :password_confirmation, 'Confirm Password: ', class: 'control-label col-sm-5' %>
      <div class="col-sm-7">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>    
  </div>

  <div class="col-md-12 mt10 text-center">
    <%= f.submit "Create Account", class: 'button button-raised button-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
