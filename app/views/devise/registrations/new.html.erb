<style>
  body > .grid { height: 100%; }
  .column { max-width: 450px; }
</style>

<h2 class="ui violet header">
  <div class="content">Sign Up</div>
</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'ui large form fluid raised segment' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <div class="ui left icon input">
      <i class="address book icon"></i>
      <%= f.text_field :full_name, class: 'form-control', autofocus: true, required: true, placeholder: 'Name' %>
    </div>
  </div>
  <div class="field">
    <div class="ui left icon input">
      <i class="user icon"></i>
      <%= f.text_field :username, class: 'form-control', required: true, placeholder: 'Username' %>
    </div>
  </div>
  <div class="field">
    <div class="ui left icon input">
      <i class="mail icon"></i>
      <%= f.email_field :email, class: 'form-control', required: true, placeholder: 'Email Address' %>
    </div>
  </div>
  <div class="field">
    <div class="ui left icon input">
      <i class="lock icon"></i>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Password (#{ @minimum_password_length} characters minimum)" %>
    </div>
  </div>
  <div class="field">
    <div class="ui left icon input">
      <i class="lock icon"></i>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password' %>
    </div>
  </div>
  <%= f.submit "Create Account", class: 'ui fluid violet submit button' %>

<% end %>