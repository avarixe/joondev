<div class="page-header"><h2>Account Management</h2></div>

<div class="col-sm-12 text-right mt10">
  <%= link_to "Back", :back, class: 'btn btn-default' %>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="col-md-6 mt10">
    <div class="panel panel-info">
      <div class="panel-heading">Account Information</div>
      <div class="panel-body">
        <div class="form-group row">
          <%= f.label :full_name, 'Name: ', class: 'control-label col-sm-5' %>
          <div class="col-sm-7">
            <%= f.text_field :full_name, class: 'form-control', required: true %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :username, 'Username: ', class: 'control-label col-sm-5' %>
          <div class="col-sm-7">
            <%= f.text_field :username, readonly: true, class: 'form-control', required: true %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :email, 'Email Address: ', class: 'control-label col-sm-5' %>
          <div class="col-sm-7">
            <%= f.email_field :email, class: 'form-control', required: true %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-6 mt10">
    <div class="panel panel-warning">
      <div class="panel-heading">Change Password</div>
      <div class="panel-body">
        <div class="form-group">
          <em>NOTE: Leave Blank if No Password Change</em>
        </div>
        <div class="form-group row">
          <%= f.label :password, 'Password: ', class: 'control-label col-sm-5' %>
          <div class="col-sm-7">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "#{ @minimum_password_length} characters minimum" %>
          </div>
        </div>
      
        <div class="form-group row">
          <%= f.label :password_confirmation, 'Confirm Password: ', class: 'control-label col-sm-5' %>
          <div class="col-sm-7">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>
        </div>
      </div>
    </div>  
  </div>
  <div class="col-md-12 mt10">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <%= f.label :current_password, 'Confirm Changes with Current Password: ', class: 'control-label col-sm-4' %>
          <div class="col-sm-4">
            <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
          </div>
          <div class="col-sm-4 text-center">
            <%= f.submit "Update Account", class: 'btn btn-warning' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>