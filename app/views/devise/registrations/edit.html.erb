<div class="page-header"><h2>Account Management</h2></div>

<div class="col-sm-12 text-sm-right mt10">
  <%= link_to "Back", :back, class: 'btn btn-secondary' %>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="col-lg-6 mt10">
    <div class="card card-outline-info">
      <div class="card-header card-info" style="color:white">Account Information</div>
      <div class="card-block">
        <div class="form-group row">
          <%= f.label :full_name, 'Name: ', class: 'col-form-label col-md-5' %>
          <div class="col-md-7">
            <%= f.text_field :full_name, class: 'form-control', required: true %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :username, 'Username: ', class: 'col-form-label col-md-5' %>
          <div class="col-md-7">
            <%= f.text_field :username, readonly: true, class: 'form-control', required: true %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :email, 'Email Address: ', class: 'col-form-label col-md-5' %>
          <div class="col-md-7">
            <%= f.email_field :email, class: 'form-control', required: true %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-6 mt10">
    <div class="card card-outline-warning">
      <div class="card-header card-warning" style="color:white">Change Password</div>
      <div class="card-block">
        <div class="form-group">
          <em>NOTE: Leave Blank if No Password Change</em>
        </div>
        <div class="form-group row">
          <%= f.label :password, 'Password: ', class: 'col-form-label col-md-5' %>
          <div class="col-md-7">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "#{ @minimum_password_length} characters minimum" %>
          </div>
        </div>
      
        <div class="form-group row">
          <%= f.label :password_confirmation, 'Confirm Password: ', class: 'col-form-label col-md-5' %>
          <div class="col-md-7">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>
        </div>
      </div>
    </div>  
  </div>
  <div class="col-lg-12 mt10">
    <div class="card">
      <div class="card-block">
        <div class="row">
          <%= f.label :current_password, 'Confirm Changes with Current Password: ', class: 'col-form-label col-md-4' %>
          <div class="col-md-4">
            <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
          </div>
          <div class="col-md-4 text-xs-center">
            <%= f.submit "Update Account", class: 'btn btn-warning' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>