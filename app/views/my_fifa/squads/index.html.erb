<% content_for :page_links do %>
  <div class="ui up pointing dropdown item">
    <div class="ui basic primary button">New Squad</div>
    <div class="menu">
      <% current_user.formations.each do |formation| %>
        <%= link_to "#{formation.title} (#{formation.layout})", new_my_fifa_squad_path(id: formation.id), class: 'item' %>
      <% end %>
    </div>
  </div>
  <%#= link_to 'New Squad', new_my_fifa_squad_path, class: 'ui basic primary button' %>
<% end %>

<table class="ui basic definition selectable compact small table" data-link="/my_fifa/squads/" width="100%">
  <thead>
    <th width="20%">Name</th>
    <th width="80%">Players</th>
  </thead>

  <tbody>
    <% @squads.each do |squad| %>
      <tr data-id=<%= squad.id %>>
        <td><%= squad.squad_name %></td>
        <td><%= squad.player_names %></td>
      </tr>
    <% end %>
  </tbody>
</table>
