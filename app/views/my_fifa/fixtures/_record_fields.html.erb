<td>
  <%= f.hidden_field :pos %>
  <div class="pos ui ribbon <%= 'yellow' if f.object.id.present? && f.object.player_id == @fixture.motm_id %> label"><%= f.object.pos %></div>
</td>
<td>
  <%= f.select :player_id, 
    grouped_options_for_select(@grouped_players, f.object.player_id), 
    {include_blank: true}, 
    {class: 'player_id players fluid dropdown'} %>
</td>
<td><%= f.number_field :ovr, class: 'ovr', min: 0 %></td>
<td><%= f.number_field :rating, class: 'rating', step: 0.01, min: 0, tabindex: i %></td>
<td><%= f.number_field :goals, class: 'goals click-form', min: 0, readonly: true %></td>
<td><%= f.number_field :assists, class: 'assists click-form', min: 0, readonly: true %></td>