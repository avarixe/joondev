console.error("Invalid Form!")

<!-- Clear any previous error messages and highlights -->
$('input.error, select.error').removeClass('error');
$('.error.message').remove();

<!-- Highlight invalid fields -->
$('.field[no-empty]').each(function(){
  if (!$('input,select', $(this)).val())
    $(this).addClass('error');
});

<!-- Output error messages -->
$('form').prepend(
  '<div class="ui error tiny message" style="display:block">' +
    '<i class="close icon"></i>' +
    '<div class="header">Please resolve the following errors:</div>' +
    '<ul class="list">' +
    <% object.errors.messages.each do |attr, msg| %>
      '<li><%= msg[0] %></li>' +  
    <% end %>
    '</ul>' +
  '</div>'
);

$('.message .close')
  .on('click', function() {
    $(this)
      .closest('.message')
      .transition('fade')
    ;
  })