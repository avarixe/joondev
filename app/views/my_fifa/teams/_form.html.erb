<script>
  function checkForm(){
    if (!$('#my_fifa_team_team_name').val())
      return error_alert('Please enter a Team Name.')
    else
      return true;
  }
</script>

<%= form_for(@team) do |f| %>
  <div class="form-group row">
    <%= f.label :team_name, 'Name: ', class: 'col-sm-4 col-sm-offset-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :team_name, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :competitions, 'Competitions: ', class: 'col-sm-4 col-sm-offset-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_area :competitions, value: @team.competition_options("\n"), rows: 10, class: 'form-control', placeholder: 'One Competition per line', required: true %>
    </div>
  </div>

  <div class="text-center">
    <%= f.submit 'Save Team', class: 'button button-raised button-highlight', onclick: 'return checkForm()' %>
    <%= link_to 'Back', my_fifa_teams_path, class: 'button button-raised' %>
  </div>
<% end %>
