$('span[data-label="loan status"]')
  .text("AT <%= @team.team_name %>")
  .parent()
  .removeClass('orange')
  .addClass('green');

var form = $('div[data-label="update loan"] form');
$('#type', form).val('loan');
$('#notes', form)
  .closest('.ui.input')
  .removeClass('disabled');
$('.submit.button', form)
  .removeClass('green')
  .addClass('orange')
  .val('LOAN OUT');

$('.ui.pink.segment, .ui.red.segment').removeClass('hidden');
