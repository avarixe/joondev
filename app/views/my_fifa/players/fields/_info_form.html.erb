<div class="ui dividing header">
  Player Information
</div>
<div class="ui stackable grid">
  <div class="equal width row">
    <div class="column">
      <div class="required field" no-empty>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="column">
      <div class="required field" no-empty>
        <%= f.label :nationality %>
        <%= f.text_field :nationality %>
      </div>
    </div>
    <div class="column">
      <div class="required field" no-empty>
        <%= f.label :year_of_birth, 'Year of Birth' %>
        <%= f.text_field :year_of_birth, data: { inputmask: "'mask': '9999'" } %>
      </div>
    </div>

  </div>
  <div class="equal width row">
    <div class="column">
      <div class="required field" no-empty>
        <%= f.label :pos, 'Position' %>
        <%= f.select :pos,
          options_for_select(MyFifa::Player::POSITIONS, @player.pos),
          { prompt: true },
          { class: 'fluid dropdown' } %>
      </div>
    </div>
    <div class="column">
      <div class="field">
        <%= f.label :sec_pos, 'Secondary Position(s)' %>
        <%= f.select :sec_pos,
          options_for_select(MyFifa::Player::POSITIONS, @player.sec_pos),
          {},
          { multiple: true, class: 'fluid multiple dropdown' } %>
      </div>
    </div>
    <div class="column">
      <div class="required field" no-empty>
        <%= f.label :start_ovr, 'Start OVR Rating' %>
        <%= f.text_field :start_ovr %>
      </div>
    </div>
  </div>
  <div class="equal width row">
    <div class="column"></div>
  </div>
</div>

<script>
  $(function(){
    $('.fluid.multiple.dropdown').change(function(){
      console.log($(this).val());
    });
  })
  </script>